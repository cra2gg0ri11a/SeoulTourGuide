<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PreferenceActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Choose what you prefer !"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"/>


    <RadioGroup
        android:id="@+id/Radio_preference1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="80dp"
        android:paddingBottom="30dp"
        android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/Rbutton_sight"
                android:layout_width="0dp"
                android:textSize="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="sightseeing"/>

            <RadioButton
                android:id="@+id/Rbutton_experience"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:text="experience"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/Radio_preference2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/Rbutton_traditional"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:text="traditional"/>

            <RadioButton
                android:id="@+id/Rbutton_modern"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:text="modern"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/Radio_preference3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="80dp"
        android:paddingTop="30dp"
        android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/Rbutton_inside"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:text="inside"/>

            <RadioButton
                android:id="@+id/Rbutton_outside"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:text="outside"/>

    </RadioGroup>

    <Button
        android:id="@+id/Button_preference"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
        android:layout_margin="20dp"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:text="submit"/>

</LinearLayout>